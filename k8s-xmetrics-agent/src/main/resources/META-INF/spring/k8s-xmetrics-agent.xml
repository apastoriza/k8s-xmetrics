<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="propertyPlaceholderConfigurer"
		  class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="ignoreUnresolvablePlaceholders" value="true"/>
		<property name="locations">
			<value>classpath:k8s-xmetrics-agent-scheduler.properties</value>
		</property>
	</bean>

	<bean id="restTemplateService" class="com.k8s.xmetrics.service.RestTemplateServiceImpl"/>

	<bean id="nodeMonitorScheduler"
		  class="com.k8s.xmetrics.scheduler.NodeMonitorScheduler" init-method="initMethod">
		<property name="cronExpression" value="${node.monitor.scheduler.cron}"/>
		<property name="monitorTask" ref="monitorTask"/>
		<property name="taskScheduler" ref="taskScheduler"/>
	</bean>

	<bean id="apiCallService" class="com.k8s.xmetrics.service.k8s.ApiCallServiceImpl">
		<property name="apiClientService" ref="apiClientService"/>
	</bean>

	<bean id="apiClientService" class="com.k8s.xmetrics.service.k8s.ApiClientServiceImpl">
		<property name="httpReadTimeoutInMillis" value="${k8s.api.client.httpReadTimeoutInMillis}"/>
	</bean>

	<!-- Tasks -->
	<bean id="monitorTask" class="com.k8s.xmetrics.scheduler.NodeMonitorTask">
		<property name="linkNodes" value="${node.monitor.url.linkNodes}"/>
		<property name="linkPods" value="${node.monitor.url.linkPods}"/>
		<property name="apiCallService" ref="apiCallService"/>
	</bean>

	<!-- Scheduler -->
	<bean id="taskScheduler" class="org.springframework.scheduling.concurrent.ThreadPoolTaskScheduler">
		<property name="poolSize" value="10"/>
	</bean>
</beans>